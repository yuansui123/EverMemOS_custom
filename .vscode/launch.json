{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: run",
            "type": "debugpy",
            "request": "launch",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}/src",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "run.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python Debugger: task",
            "type": "debugpy",
            "request": "launch",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}/src",
            "program": "${workspaceFolder}/.venv/bin/arq",
            "args": ["task.WorkerSettings"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python Debugger: longjob",
            "type": "debugpy",
            "request": "launch",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}/src",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "run.py",
            "args": ["--longjob", "kafka_consumer"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python Debugger: run_this_file",
            "type": "debugpy",
            "request": "launch",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}/src",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "${workspaceFolder}/src/bootstrap.py",
            "args": ["${file}"],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}